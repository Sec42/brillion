                      <File Id="Level06" Source="Original/o-06.lvl"/>
                      <File Id="Level07" Source="Original/o-07.lvl"/>
                      <File Id="Level08" Source="Original/o-08.lvl"/>
                      <File Id="Level09" Source="Original/o-09.lvl"/>
                      <File Id="Level10" Source="Original/o-10.lvl"/>
                      <File Id="Level11" Source="Original/o-11.lvl"/>
                      <File Id="Level12" Source="Original/o-12.lvl"/>
                      <File Id="Level13" Source="Original/o-13.lvl"/>
                      <File Id="Level14" Source="Original/o-14.lvl"/>
                      <File Id="Level15" Source="Original/o-15.lvl"/>
                      <File Id="Level16" Source="Original/o-16.lvl"/>
                      <File Id="Level17" Source="Original/o-17.lvl"/>
                      <File Id="Level18" Source="Original/o-18.lvl"/>
                      <File Id="Level19" Source="Original/o-19.lvl"/>
                      <File Id="Level20" Source="Original/o-20.lvl"/>
                      <File Id="Level21" Source="Original/o-21.lvl"/>
                      <File Id="Level22" Source="Original/o-22.lvl"/>
                      <File Id="Level23" Source="Original/o-23.lvl"/>
                      <File Id="Level24" Source="Original/o-24.lvl"/>
                      <File Id="Level25" Source="Original/o-25.lvl"/>

                      <File Id="BkgTitle" Source="Original/title.png"/>
                      <File Id="BkgLevel" Source="Original/bkg.png"/>
                      <File Id="BkgScores" Source="Original/scores.png"/>

                      <File Id="Numbers" Source="Original/numbers.png"/>
                      <File Id="Font" Source="Original/font.png"/>

                      <File Id="Star" Source="Original/star_blue.gif"/>
                      <File Id="Space" Source="Original/space.gif"/>
                      <File Id="Disk" Source="Original/disk_blue.gif"/>
                      <File Id="Death" Source="Original/death.gif"/>
                      <File Id="BlockX" Source="Original/blockX.gif"/>
                      <File Id="Block" Source="Original/block_blue.gif"/>
                      <File Id="BallX" Source="Original/ballX.gif"/>
                      <File Id="Ball" Source="Original/ball_grey.gif"/>
                      <File Id="Wall" Source="Original/wall.gif"/>

                      <File Id="SndBlock" Source="Original/block.wav"/>
                      <File Id="SndDeath" Source="Original/death.wav"/>
