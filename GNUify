#!/bin/sh

source=Makefile
target=GNUmakefile

echo GNUifying the Makefile...

(
echo "#"
echo '#This file is autogenerated, do not edit!'
echo "#"
echo
) >$target

perl -ple <$source >>$target '
/^\.[^:]*$/ && s/^\.//;		# Strip leading . from non-targets

s/^if (.*) == (.*)/ifeq "$1" $2/;
s/^if exists\(([^)]+)\)/ifneq "" "\$(wildcard $1)"/;
/^include/ && s/"//g;

'

echo "include .depend" >>$target
